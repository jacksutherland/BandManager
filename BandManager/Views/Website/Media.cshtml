@{
    ViewBag.Title = "Media";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="align-right tilt-left">Music</h1>    

    <div class="full-width music-player">
        <div class="widget_iframe" style="display:inline-block;width:100%;height:320px;margin:0;padding:0;border:0;">
            <iframe class="widget_iframe" src="@string.Format("http://www.reverbnation.com/widget_code/html_widget/artist_{0}?widget_id=50&posted_by=artist_{0}&pwc[design]=default&pwc[background_color]=%23333333&pwc[included_songs]=1&pwc[photo]=0%2C1&pwc[size]=fit", ViewBag.ReverbNationID)" width="100%" height="100%" frameborder="0" scrolling="no"></iframe>            
        </div>
    </div>

    <h1 class="margin-top15">Videos</h1>
    @foreach (var item in Model)
    {
        <h3 class="center">@item.Name</h3>
        <div class="video">            
            @Html.Raw(item.VideoHtml)
        </div>            
    }
    


      <div id="download" class="block">
        <h5>
          So you like what you hear? Join our mail list by submitting your email address below and you will have access to download Pig Latin, our most recent CD.
        </h5>
        @using (Html.BeginForm())
        {
          <div>
            <label>First Name <span >*</span></label>
            <input name="FirstName" type="text" id="FirstName" />
          </div>
          <div>
            <label>Last Name</label>
            <input name="LastName" type="text" id="LastName">
          </div>
          <div>
            <label>Email Address <span >*</span></label>
            <input name="Email" type="text" id="Email">
          </div>
          <div>
            <input type="submit" value="Submit">
          </div>
          <div>
            <p>* Required</p>
            <p>
              All information gathered will be used by Rando Tribe ONLY. We will not use this information for sending you advertising of any type. This information will only be used to send updates on the Rando Tribe. We will not sell or give your infomation to anyone.
            </p>
          </div>
        }
      </div>
